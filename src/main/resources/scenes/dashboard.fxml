<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="rootPane" prefHeight="600.0" prefWidth="900.0"
            styleClass="dashboard_container"
            stylesheets="@../styles/dashboard.css"
            xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ashu.sah.SahPustakSadan.Front_end.Controller.DashboardController">

    <!-- Left Sidebar - Will be populated programmatically -->
    <left>
        <VBox fx:id="sidebarContainer" styleClass="sidebar_container">
            <!-- Logo and App Name -->
            <VBox fx:id="logoContainer" styleClass="sidebar_logo_container">
                <FontIcon iconLiteral="fas-store-alt" iconSize="30" />
                <Text fx:id="appNameLabel" text="Sah Pustak Sadan" />
            </VBox>

            <!-- Buttons will be added programmatically -->
            <VBox fx:id="buttonsContainer" styleClass="sidebar_buttons_container">
            </VBox>

            <!-- Report Bug Section -->
            <VBox fx:id="reportBugContainer" styleClass="report_bug_container">
                <Text styleClass="report_bug_text" text="Report Bugs?" />
                <Label styleClass="report_bug_label" text="Use this to report any error or suggestion" wrapText="true" />
                <Button fx:id="reportBtn" styleClass="sidebar_btn" text="Report" onAction="#handleReportBug">
                    <graphic>
                        <FontIcon iconLiteral="fas-bug" iconSize="20" />
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="mainContentContainer" styleClass="main_content" spacing="20">
            <HBox styleClass="header_box" alignment="CENTER_LEFT">
                <FontIcon iconLiteral="fas-tachometer-alt" iconSize="24" />
                <Text text="Dashboard" styleClass="page_title" />
            </HBox>

            <!-- Dashboard Stats -->
            <HBox fx:id="statsContainer" spacing="20" styleClass="stats_container">
                <!-- Stats cards will be populated programmatically -->
            </HBox>

            <!-- Recent Activities -->
            <VBox styleClass="content_section">
                <Text text="Recent Activities" styleClass="section_title" />
                <TableView fx:id="recentActivitiesTable" styleClass="activities_table">
                    <columns>
                        <TableColumn text="Time" prefWidth="120" />
                        <TableColumn text="Type" prefWidth="100" />
                        <TableColumn text="Description" prefWidth="300" />
                        <TableColumn text="Amount" prefWidth="100" />
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>

    <!-- Bottom Status Bar -->
    <bottom>
        <HBox styleClass="status_bar" alignment="CENTER_LEFT" spacing="20">
            <Label fx:id="statusLabel" text="Ready" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="dateTimeLabel" text="" />
        </HBox>
    </bottom>

</BorderPane>