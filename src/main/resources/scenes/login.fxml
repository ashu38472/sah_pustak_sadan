<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<?import javafx.scene.control.Button?>
<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" styleClass="login_container"
            stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ashu.sah.SahPustakSadan.Front_end.Controller.LoginViewController">

    <VBox fx:id="logoContainer" prefHeight="400.0" prefWidth="250.0" styleClass="login_logo_container"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <FontIcon iconLiteral="fas-store-alt" iconSize="60"/>
        <Text fx:id="appNameLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="Sah Pustak Sadan"/>
    </VBox>
    <HBox fx:id="loginFieldContainer" alignment="CENTER" prefHeight="400.0" prefWidth="350.0"
          styleClass="login_field_container" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <VBox spacing="5" alignment="CENTER" styleClass="switch_box" xmlns:fx="http://javafx.com/fxml/1">
            <Text fx:id="switchMessage" text="Don't have an account? Sign up" />
            <Button fx:id="switchButton" text="Sign Up" onAction="#handleSwitchAuthMode" />
        </VBox>

    </HBox>
</AnchorPane>
