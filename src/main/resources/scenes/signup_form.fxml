<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" styleClass="login_field_box" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ashu.sah.SahPustakSadan.Front_end.Controller.SignupFormController">

    <Label id="label" text="Sign Up" />
    <ChoiceBox fx:id="roleBox" prefWidth="150.0" styleClass="account_selector" />
    <Label id="label" text="Full Name" />
    <TextField fx:id="nameField" promptText="Name" styleClass="input_field" />
    <Label id="label" text="Email" />
    <TextField fx:id="emailField" promptText="Email" styleClass="input_field" />
    <Label id="label" text="Password" />
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input_field" />
    <Label id="label" text="Confirm Password" />
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" styleClass="input_field" />

    <Button fx:id="registerButton" prefHeight="26.0" prefWidth="328.0" text="Register" />
    <Label fx:id="error" styleClass="error_lbl" />
<!--    <Hyperlink onAction="#switchToLogin" text="Already have an account? Login" />-->

</VBox>
